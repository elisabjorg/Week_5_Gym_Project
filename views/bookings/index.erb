<h1>Bookings</h1>
  <table>
    <thead>
    <tr>
      <th>Course</th>
      <th></th>
      <th>Member</th>
      <th></th>
      <th>Delete</th>
    </tr>
    </thead>
    <% for booking in @bookings %>
    <tr>
      <td><a href="/bookings/<%= booking.id %>"><%= booking.lesson.title %></a></td>
      <td></td>
      <td><a href="/bookings/<%= booking.id %>"><%= booking.member.full_name %></a></td>
      <td></td>
      <td><form action="/bookings/<%= booking.id %>/delete" method="POST"><input type="submit" value="Delete" /></form></td>
    </tr>
    <% end %>
    </table>
    <form action="/bookings/new"><input type="submit" value="Add a new booking"></form>
